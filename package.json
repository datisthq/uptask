{
  "name": "project",
  "type": "module",
  "version": "0.0.0-dev",
  "private": true,
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "pnpm /:build/",
    "bump": "ncu -ws -u",
    "clean": "rm -rf **/node_modules **/build",
    "format": "pnpm /:format/",
    "install": "pnpm /:install/",
    "lint": "pnpm /:lint/",
    "publish": "pnpm /:publish/",
    "spec": "pnpm /:spec/",
    "start": "pnpm -F website start",
    "test": "pnpm lint && pnpm type && pnpm spec",
    "type": "pnpm /:type/",
    "version": "pnpm /:version/",

    "py:build": "uv --directory python build --out-dir build",
    "py:format": "uv --directory python run ruff format",
    "py:install": "uv --directory python sync",
    "py:lint": "uv --directory python run ruff check",
    "py:publish": "uv --directory python publish 'build/*'",
    "py:spec": "uv --directory python run pytest --cov --cov-report json",
    "py:type": "uv --directory python run ty check",
    "py:version": "uv --directory python version",

    "ts:build": "pnpm --dir typescript build",
    "ts:format": "biome check --write",
    "ts:lint": "biome check",
    "ts:publish": "pnpm --dir typescript publish --access public --no-git-checks",
    "ts:spec": "vitest run",
    "ts:type": "biome check",
    "ts:version": "pnpm --dir typescript exec pnpm version --no-git-tag-version"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@semantic-release/exec": "7.1.0",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "4.0.16",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "husky": "9.1.7",
    "lefthook": "2.1.1",
    "npm-check-updates": "18.0.1",
    "semantic-release": "24.2.9",
    "typescript": "5.9.2",
    "vitest": "4.0.16",
    "vitest-polly": "1.4.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
