{
  "name": "project",
  "type": "module",
  "version": "0.4.0",
  "private": true,
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "pnpm /:build/",
    "bump": "ncu -ws -u",
    "clean": "rm -rf **/node_modules **/build",
    "format": "pnpm /:format/",
    "install": "pnpm /:install/",
    "lint": "pnpm /:lint/",
    "publish": "pnpm /:publish/",
    "setver": "pnpm /:setver/",
    "spec": "pnpm /:spec/",
    "start": "pnpm -F website start",
    "test": "pnpm lint && pnpm type && pnpm spec",
    "type": "pnpm /:type/",

    "py:build": "uv --directory python run task build",
    "py:format": "uv --directory python run task format",
    "py:install": "uv --directory python run task install",
    "py:lint": "uv --directory python run task lint",
    "py:publish": "uv --directory python run task publish",
    "py:setver": "uv --directory python run task setver",
    "py:spec": "uv --directory python run task spec",
    "py:type": "uv --directory python run task type",

    "ts:build": "pnpm -r build",
    "ts:format": "pnpm -r format",
    "ts:lint": "pnpm -r lint",
    "ts:publish": "pnpm -r publish",
    "ts:setver": "pnpm -r setver",
    "ts:spec": "pnpm -r spec",
    "ts:type": "pnpm -r type"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@semantic-release/exec": "7.1.0",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "4.0.16",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "husky": "9.1.7",
    "lefthook": "2.1.1",
    "npm-check-updates": "18.0.1",
    "semantic-release": "24.2.9",
    "typescript": "5.9.2",
    "vitest": "4.0.16",
    "vitest-polly": "1.4.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
